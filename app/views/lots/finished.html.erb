<h2>Lotes finalizados </h2>

<table class = "table">
        <tr>
            <th>Código</th>
            <th>Inicio</th>
            <th>Término</th>
            <th>Valor</th>
            <th>Diferença</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        <% @lots.each do |l|%>
                <tr>
                    <td> <%= link_to l.code, lot_path(l) %> </td>
                    <td> <%= I18n.localize(l.start_date) %> </td>
                    <td> <%= I18n.localize(l.limit_date) %> </td>
                    <td> R$<%= l.min_value %> </td>
                    <td> R$<%= l.dif_value %> </td>
                    <td> <%= t("activerecord.enum.lot.status.#{l.status}")  %> </td>
                    <td> <%= button_to 'Calcular vencedor', calc_winner_path(l), method: :post if !l.winned? && !l.no_winner? %> </td>
                    
                </tr>
        <% end%>
</table>
