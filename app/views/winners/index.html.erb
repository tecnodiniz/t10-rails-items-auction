<div class = "row">
    <div class = "content">
        <h1>Vencedores</h1>
    </div>
    
    <div class = "content">
        <table class = "table">
            <tr>
                <th>Lote</th>
                <th>Vencedor</th>
                <th>Lance</th>
        
            </tr>
            <% @winners.each do |w|%>

                <tr>
                    <td>  <%= link_to w.lot.code, lot_path(w.lot) %> </td>
                    <td> <%= w.user.email %> </td>
                    <td> R$ <%= w.user.bids.select { |bid| bid.lot == w.lot }.last.value %> </td>
                </tr>

            <% end%>
        </table>
    </div>
</div>