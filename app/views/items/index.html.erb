<div class = "row">
    
    <div class = "content">
        <%if user_session%>
            <% if current_user.admin?%>
                <%= link_to "Cadastrar item para leilão", new_item_path %>
            <%end%>
        <%end%>
    </div>

    <div class = "content">
    <table class = "table">
        <tr>
            <th>Código</th>
            <th>Item</th>
        </tr>
        <% @item.each do |i|%>
            <tr>
                <td> <%= i.code%> </td>
                <td> <%= i.name%> </td>
            </tr>
        <% end%>
    </table>
    </div>
</div>