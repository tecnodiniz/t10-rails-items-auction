<div>
    <%if user_session%>
        <% if current_user.admin?%>
            <%= link_to "Cadastrar item para leilão", new_item_path %>
        <%end%>
    <%end%>
</div>

<div>
<table>
    <tr>
        <th>Código</th>
        <th>Item</th>
    </tr>
    <% @item.each do |i|%>
        <tr>
            <td> <%= i.code%> </td>
            <td> <%= i.name%> </td>
        </tr>
    <% end%>
</table>
</div>